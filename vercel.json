{
    "version": 2,
    "builds": [
      {
        "src": "src/frontend/package.json",
        "use": "@vercel/next"
      },
      {
        "src": "src/backend/main.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/api/stress",
        "dest": "/src/backend/stress.py"
      },
      {
        "src": "/(.*)",
        "dest": "/src/frontend/$1"
      }
    ],
    "env": {
      "NEXT_PUBLIC_API_URL": "https://stresscope.vercel.app/api"
    }
  }
  