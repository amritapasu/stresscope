{
    "version": 2,
    "builds": [
      {
        "src": "app/**/page.tsx",
        "use": "@vercel/next"
      },
      {
        "src": "backend/main.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/api/stress",
        "dest": "/backend/stress.py"
      },
      {
        "src": "/(.*)",
        "dest": "/app/$1"
      }
    ],
    "env": {
      "NEXT_PUBLIC_API_URL": "https://stresscope.vercel.app/api/stress"
    }
  }